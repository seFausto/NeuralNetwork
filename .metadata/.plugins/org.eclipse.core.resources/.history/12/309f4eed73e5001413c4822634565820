
public class Neuron {
	
	public double Input;
	
	private double _weight;
	private double learningRate = .01;
	
	
	public Neuron(double input, double weight)
	{
		Input = input;
		_weight = weight;
	}
	
	public void Train(double input, double output)
	{
		double guess = 0;
		double error = output - guess;
		
		_weight = learningRate * error * input;		
	}

}
