import java.util.Random;

public class Neuron {

	private double _weight;
	private double learningRate = .01;

	public Neuron(double weight) {
		_weight = weight;
	}

	public Neuron() {
		Random r = new Random();

		_weight = r.nextDouble();

	}

	public void Train(double input, double output) {
		double guess = 0;
		double error = output - guess;

		_weight = learningRate * error * input;
	}
	
	public int GetOuput(double input)
	{
	
		return Activate(input + weight);
		
	}

	private int Activate(double input) {
		// TODO Auto-generated method stub
		return 0;
	}

}
